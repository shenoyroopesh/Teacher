<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:UI="com.Teacher.UI.*"
		 width="20%" height="20%" currentState="up">
	<fx:Style source="Styles.css"/>
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	<fx:Declarations>
		<fx:String id="label" />
		<fx:String id="style" />
	</fx:Declarations>
	<s:Button chromeColor="#FEFDFD" fontSize="{this.height*0.12}" 
					   label="{this.label}"
					   width="{this.width}" height="{this.height}" 
					   styleName="{this.style}" skinClass="com.Teacher.UI.CustomButtonSkin"/>
</s:Group>