						{month:"August", time: 210},
						{month:"September", time: 150}
					]
				},
				{
					name:'Riley', 
					data:[
						{month:"January", time:140},
						{month:"February", time:120},
						{month:"March", time:120},
						{month:"April",time:150},
						{month:"May", time:180},
