<?xml version="1.0" encoding="utf-8"?>
<!-- This is the renderer used for  -->
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"
		 color="0xFFFFFF" alternatingItemColors="[#7D95AD,#7D95AD]"
		 alternatingItemColors.hovered="[#000000,#000000]">
	<s:states> 
		<s:State name="normal"/> 
		<s:State name="hovered"/>
		<s:State name="selected"/> 
	</s:states> 
	<s:VGroup top="5" bottom="5" right="5" left="5" id="labelGroup" 
			  color.hovered="0x000000" color.selected="0x000000">
		<s:Label id="remarkHeader" text="{data.name+' ('+data.date+'): '}" fontWeight="bold"/>
		<s:Label id="remark" text="{data.remark}"/>	
	</s:VGroup>
</s:ItemRenderer>
